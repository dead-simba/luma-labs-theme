{% schema %}
{
  "name": "Luma Product Bullets",
  "target": "section",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Top Margin",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Bottom Margin",
      "default": 0
    },
    {
      "type": "header",
      "content": "Bullet Content"
    },
    {
      "type": "text",
      "id": "bullet1_bold",
      "label": "Bullet 1 Bold text",
      "default": "Fades Stubborn Spots"
    },
    {
      "type": "textarea",
      "id": "bullet1_text",
      "label": "Bullet 1 Text",
      "default": "Tyrosinase inhibitor stops the formation of new dark pigment."
    },
    {
      "type": "text",
      "id": "bullet2_bold",
      "label": "Bullet 2 Bold text",
      "default": "Stabilized Antioxidants"
    },
    {
      "type": "textarea",
      "id": "bullet2_text",
      "label": "Bullet 2 Text",
      "default": "Ethyl Ascorbic Acid (Vitamin C) boosts overall radiance without oxidizing."
    },
    {
      "type": "text",
      "id": "bullet3_bold",
      "label": "Bullet 3 Bold text",
      "default": "Barrier Safe"
    },
    {
      "type": "textarea",
      "id": "bullet3_text",
      "label": "Bullet 3 Text",
      "default": "Brightens aggressively without the peeling or toxicity of hydroquinone."
    }
  ]
}
{% endschema %}

{% style %}
  .luma-bullets-{{ block.id }} {
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
    font-family: var(--font-body--family), sans-serif;
  }

  .luma-bullets-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .luma-bullet-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .luma-bullet-icon {
    flex-shrink: 0;
    margin-top: 2px;
  }

  .luma-bullet-icon svg {
    width: 20px;
    height: 20px;
    color: #D4A340;
    fill: currentColor;
  }

  .luma-bullet-content {
    font-size: 14px;
    color: rgba(26, 26, 26, 0.8);
    line-height: 1.6;
    margin: 0;
  }

  .luma-bullet-content strong {
    font-weight: 700;
    color: #1A1A1A;
  }
{% endstyle %}

<div class="luma-bullets-{{ block.id }}" {{ block.shopify_attributes }}>
  <ul class="luma-bullets-list">
    {%- if block.settings.bullet1_text != blank -%}
      <li class="luma-bullet-item">
        <div class="luma-bullet-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256">
            <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm45.66,85.66-56,56a8,8,0,0,1-11.32,0l-24-24a8,8,0,0,1,11.32-11.32L112,148.69l50.34-50.35a8,8,0,0,1,11.32,11.32Z"></path>
          </svg>
        </div>
        <p class="luma-bullet-content">
          {%- if block.settings.bullet1_bold != blank -%}
            <strong>{{ block.settings.bullet1_bold }}:</strong>
          {%- endif -%}
          {{ block.settings.bullet1_text }}
        </p>
      </li>
    {%- endif -%}

    {%- if block.settings.bullet2_text != blank -%}
      <li class="luma-bullet-item">
        <div class="luma-bullet-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256">
            <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm45.66,85.66-56,56a8,8,0,0,1-11.32,0l-24-24a8,8,0,0,1,11.32-11.32L112,148.69l50.34-50.35a8,8,0,0,1,11.32,11.32Z"></path>
          </svg>
        </div>
        <p class="luma-bullet-content">
          {%- if block.settings.bullet2_bold != blank -%}
            <strong>{{ block.settings.bullet2_bold }}:</strong>
          {%- endif -%}
          {{ block.settings.bullet2_text }}
        </p>
      </li>
    {%- endif -%}

    {%- if block.settings.bullet3_text != blank -%}
      <li class="luma-bullet-item">
        <div class="luma-bullet-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256">
            <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm45.66,85.66-56,56a8,8,0,0,1-11.32,0l-24-24a8,8,0,0,1,11.32-11.32L112,148.69l50.34-50.35a8,8,0,0,1,11.32,11.32Z"></path>
          </svg>
        </div>
        <p class="luma-bullet-content">
          {%- if block.settings.bullet3_bold != blank -%}
            <strong>{{ block.settings.bullet3_bold }}:</strong>
          {%- endif -%}
          {{ block.settings.bullet3_text }}
        </p>
      </li>
    {%- endif -%}
  </ul>
</div>
