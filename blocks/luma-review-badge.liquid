<div class="luma-review-badge" {{ block.shopify_attributes }}>
  <div class="luma-review-badge__avatars">
    <div class="luma-review-badge__avatar">
      <img
        src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=100&h=100&fit=crop"
        width="40"
        height="40"
        loading="lazy"
        alt="Customer Avatar"
      >
    </div>
    <div class="luma-review-badge__avatar">
      <img
        src="https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?w=100&h=100&fit=crop"
        width="40"
        height="40"
        loading="lazy"
        alt="Customer Avatar"
      >
    </div>
    <div class="luma-review-badge__avatar">
      <img
        src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=100&h=100&fit=crop"
        width="40"
        height="40"
        loading="lazy"
        alt="Customer Avatar"
      >
    </div>
  </div>
  <div class="luma-review-badge__content">
    <div class="luma-review-badge__stars">
      <i class="ph-fill ph-star"></i>
      <i class="ph-fill ph-star"></i>
      <i class="ph-fill ph-star"></i>
      <i class="ph-fill ph-star"></i>
      <i class="ph-fill ph-star"></i>
    </div>
    <span class="luma-review-badge__text">
      {{ block.settings.text | replace: '10,000+', '<strong>10,000+</strong>' }}
    </span>
  </div>
</div>

{% schema %}
{
  "name": "Luma Review Badge",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Count Text",
      "default": "Loved by 10,000+ customers"
    }
  ],
  "presets": [
    {
      "name": "Luma Review Badge"
    }
  ]
}
{% endschema %}
