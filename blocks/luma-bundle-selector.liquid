{% schema %}
{
  "name": "Luma Bundle Selector",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Selector Title",
      "default": "Select Your Protocol"
    },
    {
      "type": "header",
      "content": "Option 1 (Default)"
    },
    {
      "type": "product",
      "id": "opt1_product",
      "label": "Option 1 Product (Leave blank to use current page product)"
    },
    {
      "type": "text",
      "id": "opt1_title",
      "label": "Title",
      "default": "1 Bottle"
    },
    {
      "type": "text",
      "id": "opt1_subtitle",
      "label": "Subtitle",
      "default": "Try it out."
    },
    {
      "type": "header",
      "content": "Option 2 (Highlighted)"
    },
    {
      "type": "product",
      "id": "opt2_product",
      "label": "Option 2 Product (Bundle App Product)"
    },
    {
      "type": "text",
      "id": "opt2_title",
      "label": "Title",
      "default": "2 Bottles (2 Month Supply)"
    },
    {
      "type": "text",
      "id": "opt2_subtitle",
      "label": "Subtitle",
      "default": "Free Shipping Unlocked"
    },
    {
      "type": "color",
      "id": "opt2_subtitle_color",
      "label": "Subtitle Color",
      "default": "#15803d"
    },
    {
      "type": "text",
      "id": "opt2_badge",
      "label": "Highlight Badge text",
      "default": "Most Popular (Save 15%)"
    },
    {
      "type": "header",
      "content": "Option 3"
    },
    {
      "type": "product",
      "id": "opt3_product",
      "label": "Option 3 Product (Bundle App Product)"
    },
    {
      "type": "text",
      "id": "opt3_title",
      "label": "Title",
      "default": "3 Bottles (Save 20%)"
    },
    {
      "type": "text",
      "id": "opt3_subtitle",
      "label": "Subtitle",
      "default": "Never run out."
    }
  ]
}
{% endschema %}

<style>
  .luma-bundle-wrapper {
    margin-bottom: 28px;
    font-family: var(--font-body--family), sans-serif;
    width: 100%;
  }
  .luma-bundle-title {
    font-size: 10px !important;
    font-weight: 700 !important;
    text-transform: uppercase !important;
    letter-spacing: 0.1em !important;
    color: #1a1a1a !important;
    margin: 0 0 12px 0 !important;
    line-height: 1.2 !important;
    font-family: var(--font-body--family), sans-serif !important;
  }
  .luma-bundle-options {
    display: flex;
    flex-direction: column;
    gap: 12px;
    width: 100%;
  }

  .luma-bundle-radio {
    position: absolute;
    opacity: 0;
    cursor: pointer;
  }

  .luma-bundle-card {
    border: 2px solid #e5e5e5;
    border-radius: 12px;
    padding: 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    background-color: transparent;
    width: 100%;
    box-sizing: border-box;
  }

  .luma-bundle-card:hover {
    border-color: rgba(26, 26, 26, 0.3);
  }

  .luma-bundle-card--highlighted {
    background-color: #fefaeb; /* yellow-50 approx */
    overflow: hidden;
  }

  .luma-bundle-badge {
    position: absolute;
    top: 0;
    right: 0;
    background-color: #d4a340;
    color: #ffffff;
    font-size: 9px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 4px 12px;
    border-bottom-left-radius: 8px;
  }

  /* Checked States */
  .luma-bundle-label:has(.luma-bundle-radio:checked) .luma-bundle-card {
    border-color: #d4a340;
    background-color: #fffbf0;
    box-shadow: 0 0 0 2px #d4a340, 0 8px 25px rgba(212, 163, 64, 0.15);
  }

  .luma-bundle-label:has(.luma-bundle-radio:checked) .luma-radio-circle {
    border-color: #d4a340;
    border-width: 5px;
  }

  .luma-bundle-info-left {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-grow: 1;
    min-width: 0;
  }

  .luma-bundle-info-left > div {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .luma-radio-circle {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid #e5e5e5;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .luma-bundle-card--highlighted .luma-radio-circle {
    border-width: 2px;
    border-color: #d4a340;
  }

  .luma-bundle-name {
    font-weight: 700;
    color: #1a1a1a;
    display: block;
    font-size: 16px;
    line-height: 1.2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .luma-bundle-sub {
    font-size: 12px;
    color: rgba(26, 26, 26, 0.6);
    display: block;
  }

  .luma-bundle-price-right {
    text-align: right;
    flex-shrink: 0;
    margin-left: 12px;
  }

  .luma-bundle-price {
    font-weight: 700;
    font-size: 18px;
    color: #1a1a1a;
    display: block;
    line-height: 1.2;
  }

  .luma-bundle-compare-price {
    font-size: 12px;
    color: rgba(26, 26, 26, 0.5);
    text-decoration: line-through;
    display: block;
  }
</style>

{%- liquid
  assign option1_product = block.settings.opt1_product | default: product
  assign option2_product = block.settings.opt2_product
  assign option3_product = block.settings.opt3_product

  assign option1_var = option1_product.selected_or_first_available_variant
  assign option2_var = option2_product.selected_or_first_available_variant
  assign option3_var = option3_product.selected_or_first_available_variant
-%}

<div class="luma-bundle-wrapper" {{ block.shopify_attributes }}>
  {%- if block.settings.title != blank -%}
    <h3 class="luma-bundle-title">{{ block.settings.title | escape }}</h3>
  {%- endif -%}

  {%- if option1_var != blank -%}
    <luma-bundle-selector class="luma-bundle-options" data-product-id="{{ product.id }}">
      {%- comment -%} OPTION 1 {%- endcomment -%}
      <label class="luma-bundle-label" for="luma-variant-{{ option1_var.id }}">
        <input
          type="radio"
          name="luma_bundle_selection"
          value="{{ option1_var.id }}"
          id="luma-variant-{{ option1_var.id }}"
          class="luma-bundle-radio"
          {% if option2_var == blank %}
            checked
          {% endif %}
        >
        <div class="luma-bundle-card">
          <div class="luma-bundle-info-left">
            <div class="luma-radio-circle"></div>
            <div>
              <span class="luma-bundle-name">{{ block.settings.opt1_title | default: option1_var.title }}</span>
              {%- if block.settings.opt1_subtitle != blank -%}
                <span class="luma-bundle-sub">{{ block.settings.opt1_subtitle }}</span>
              {%- endif -%}
            </div>
          </div>
          <div class="luma-bundle-price-right">
            <span class="luma-bundle-price">{{ option1_var.price | money }}</span>
            {%- if option1_var.compare_at_price > option1_var.price -%}
              <span class="luma-bundle-compare-price">{{ option1_var.compare_at_price | money }}</span>
            {%- endif -%}
          </div>
        </div>
      </label>

      {%- comment -%} OPTION 2 {%- endcomment -%}
      {%- if option2_var != blank -%}
        <label class="luma-bundle-label" for="luma-variant-{{ option2_var.id }}">
          <input
            type="radio"
            name="luma_bundle_selection"
            value="{{ option2_var.id }}"
            id="luma-variant-{{ option2_var.id }}"
            class="luma-bundle-radio"
            checked
          >
          <div class="luma-bundle-card luma-bundle-card--highlighted">
            {%- if block.settings.opt2_badge != blank -%}
              <div class="luma-bundle-badge">{{ block.settings.opt2_badge }}</div>
            {%- endif -%}
            <div class="luma-bundle-info-left" style="margin-top: 8px;">
              <div class="luma-radio-circle"></div>
              <div>
                <span class="luma-bundle-name">{{ block.settings.opt2_title | default: option2_var.title }}</span>
                {%- if block.settings.opt2_subtitle != blank -%}
                  <span
                    class="luma-bundle-sub"
                    {% if block.settings.opt2_subtitle_color != blank %}
                      style="color: {{ block.settings.opt2_subtitle_color }}; font-weight: 700;"
                    {% endif %}
                  >
                    {{ block.settings.opt2_subtitle }}
                  </span>
                {%- endif -%}
              </div>
            </div>
            <div class="luma-bundle-price-right" style="margin-top: 8px;">
              <span class="luma-bundle-price">{{ option2_var.price | money }}</span>
              {%- if option2_var.compare_at_price > option2_var.price -%}
                <span class="luma-bundle-compare-price">{{ option2_var.compare_at_price | money }}</span>
              {%- endif -%}
            </div>
          </div>
        </label>
      {%- endif -%}

      {%- comment -%} OPTION 3 {%- endcomment -%}
      {%- if option3_var != blank -%}
        <label class="luma-bundle-label" for="luma-variant-{{ option3_var.id }}">
          <input
            type="radio"
            name="luma_bundle_selection"
            value="{{ option3_var.id }}"
            id="luma-variant-{{ option3_var.id }}"
            class="luma-bundle-radio"
          >
          <div class="luma-bundle-card">
            <div class="luma-bundle-info-left">
              <div class="luma-radio-circle"></div>
              <div>
                <span class="luma-bundle-name">{{ block.settings.opt3_title | default: option3_var.title }}</span>
                {%- if block.settings.opt3_subtitle != blank -%}
                  <span class="luma-bundle-sub">{{ block.settings.opt3_subtitle }}</span>
                {%- endif -%}
              </div>
            </div>
            <div class="luma-bundle-price-right">
              <span class="luma-bundle-price">{{ option3_var.price | money }}</span>
              {%- if option3_var.compare_at_price > option3_var.price -%}
                <span class="luma-bundle-compare-price">{{ option3_var.compare_at_price | money }}</span>
              {%- endif -%}
            </div>
          </div>
        </label>
      {%- endif -%}
    </luma-bundle-selector>

    <script>
      /* Sync custom bundle radio buttons with the hidden Shopify variant input */
      document.addEventListener('DOMContentLoaded', function () {
        const bundleSelector = document.querySelector('luma-bundle-selector');
        if (!bundleSelector) return;

        const radios = bundleSelector.querySelectorAll('.luma-bundle-radio');
        const productForm = document.querySelector('form[action^="/cart/add"]');

        function updateFormVariant(variantId) {
          if (productForm) {
            let idInput = productForm.querySelector('input[name="id"]');

            // If the input doesn't exist (some themes dynamically re-render it), try to find it again or create it
            if (!idInput) {
              idInput = document.createElement('input');
              idInput.type = 'hidden';
              idInput.name = 'id';
              productForm.appendChild(idInput);
            }

            idInput.value = variantId;
            idInput.dispatchEvent(new Event('change', { bubbles: true }));

            // Support for modern Shopify themes that use variant-id dynamically
            const url = new URL(window.location.href);
            url.searchParams.set('variant', variantId);
            window.history.replaceState({ path: url.href }, '', url.href);
          }
        }

        radios.forEach((radio) => {
          radio.addEventListener('change', function () {
            updateFormVariant(this.value);
          });
        });

        // Set initial value on load
        const initialChecked = bundleSelector.querySelector('.luma-bundle-radio:checked');
        if (initialChecked) {
          // Add small delay to ensure theme scripts have loaded the form
          setTimeout(() => {
            updateFormVariant(initialChecked.value);
          }, 100);
        }
      });
    </script>
  {%- else -%}
    <p style="font-size: 12px; color: red;">Please ensure at least the base product is valid.</p>
  {%- endif -%}
</div>
