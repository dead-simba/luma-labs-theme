{{ 'luma-synergy.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="luma-synergy section-{{ section.id }}-padding bg-white">
  <div class="page-width">
    {%- if section.settings.title != blank or section.settings.text != blank -%}
      <div class="luma-synergy__header">
        {%- if section.settings.title != blank -%}
          <h2 class="luma-synergy__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          <div class="luma-synergy__text">{{ section.settings.text }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="luma-synergy__grid">
      {%- for block in section.blocks -%}
        <div
          class="luma-synergy__card luma-synergy__card--{{ block.settings.color_theme }}"
          {{ block.shopify_attributes }}
        >
          <div class="luma-synergy__card-header">
            <span class="luma-synergy__step">0{{ forloop.index }}</span>
            {%- if block.settings.badge != blank -%}
              <span class="luma-synergy__badge">{{ block.settings.badge }}</span>
            {%- endif -%}
          </div>
          {%- if block.settings.title != blank -%}
            <h3 class="luma-synergy__card-title">{{ block.settings.title }}</h3>
          {%- endif -%}
          {%- if block.settings.instruction != blank -%}
            <p class="luma-synergy__card-instruction">{{ block.settings.instruction }}</p>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <div class="luma-synergy__card-text">{{ block.settings.text }}</div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Luma Synergy",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "The Synergy"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Skincare is an ecosystem. Using a brightening serum without a strong barrier allows hydration to escape. Using actives without SPF causes pigment to return. This is the complete biological loop."
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "synergy_card",
      "name": "Synergy Card",
      "limit": 3,
      "settings": [
        {
          "type": "select",
          "id": "color_theme",
          "label": "Color Theme",
          "options": [
            {
              "value": "peach",
              "label": "Peach (Treat)"
            },
            {
              "value": "blue",
              "label": "Blue (Repair)"
            },
            {
              "value": "yellow",
              "label": "Yellow (Defend)"
            }
          ],
          "default": "peach"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge",
          "default": "Treat"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "2% Alpha Arbutin"
        },
        {
          "type": "text",
          "id": "instruction",
          "label": "Usage Instruction",
          "default": "Apply to damp skin"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Scientific Explanation",
          "default": "<p><strong>The Science:</strong> Binds to the tyrosinase enzyme, aggressively fading stubborn dark spots and post-acne marks (PIH) at the cellular source while Vitamin C boosts overall luminosity.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Luma Synergy",
      "blocks": [
        {
          "type": "synergy_card",
          "settings": {
            "color_theme": "peach",
            "badge": "Treat",
            "title": "2% Alpha Arbutin",
            "instruction": "Apply to damp skin",
            "text": "<p><strong>The Science:</strong> Binds to the tyrosinase enzyme, aggressively fading stubborn dark spots and post-acne marks (PIH) at the cellular source while Vitamin C boosts overall luminosity.</p>"
          }
        },
        {
          "type": "synergy_card",
          "settings": {
            "color_theme": "blue",
            "badge": "Repair",
            "title": "Barrier Renew",
            "instruction": "Press gently into skin",
            "text": "<p><strong>The Science:</strong> A 3:1:1 lipid matrix physically patches micro-tears in the stratum corneum. This locks the Arbutin deep into the skin, preventing evaporation and amplifying fading power.</p>"
          }
        },
        {
          "type": "synergy_card",
          "settings": {
            "color_theme": "yellow",
            "badge": "Defend",
            "title": "Matte UV Defense",
            "instruction": "Seal morning routine",
            "text": "<p><strong>The Science:</strong> UV rays are the #1 trigger for melanin. This 6-filter hydrogel acts as an absolute shield, preventing the sun from undoing the hard work of your brightening serum.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
