<style>
  .qr-auth-hero-section {
    background-color: #fafafa; /* Base background for the page extension */
    padding-bottom: 2rem;
  }
</style>

<div class="qr-auth-hero-section">
  <!-- The Celebratory Welcome -->
  <section class="bg-[#1A1A1A] text-white pt-10 pb-28 px-6 text-center rounded-b-[2.5rem] relative shadow-lg overflow-hidden">
    <!-- Abstract background glow -->
    <div class="absolute inset-0 rounded-b-[2.5rem] pointer-events-none">
      <div
        class="absolute top-0 right-0 w-48 h-48 bg-green-500/20 rounded-full mix-blend-overlay filter blur-[40px] animate-fade-in"
      ></div>
      <div
        class="absolute bottom-[-20%] left-[-10%] w-48 h-48 bg-[#E6F0F9]/30 rounded-full mix-blend-overlay filter blur-[40px] animate-fade-in"
        style="animation-delay: 0.3s;"
      ></div>
    </div>

    <div class="relative z-10">
      <div class="w-16 h-16 rounded-full bg-green-500 text-white flex items-center justify-center mx-auto mb-5 shadow-[0_0_20px_rgba(34,197,94,0.4)] animate-pop-in border-4 border-white/10">
        <i class="ph-bold ph-check text-3xl"></i>
      </div>

      <span class="inline-block bg-white/10 backdrop-blur border border-white/20 text-[10px] font-bold uppercase tracking-widest px-3 py-1 rounded-full mb-4 animate-slide-up">
        Batch DH-01 Verified
      </span>

      <h1
        class="font-serif text-3xl md:text-4xl leading-tight mb-3 animate-slide-up"
        style="color: white; margin: 0 0 12px 0;"
      >
        {{ section.settings.heading }}
        <br>
        <span class="italic text-[#D4A340]">{{ section.settings.subheading }}</span>
      </h1>
      <p class="font-sans text-base text-white font-medium mb-1 animate-slide-up" style="margin: 0 0 4px 0;">
        {{ section.settings.welcome_text }}
      </p>
      <p class="font-sans text-xs text-white/70 font-light leading-relaxed animate-slide-up" style="margin: 0;">
        {{ section.settings.description }}
      </p>
    </div>
  </section>

  <!-- The Floating Product Hero -->
  <div class="relative z-30 flex justify-center -mt-20 mb-6 px-6 animate-slide-up w-full">
    <div
      class="w-11/12 md:w-3/5 lg:w-2/5 aspect-square rounded-[2rem] border-4 border-white shadow-[0_20px_40px_rgba(0,0,0,0.15)] flex items-center justify-center overflow-hidden relative"
      style="background: {{ section.settings.product_bg_gradient }};"
    >
      <div
        class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10 mix-blend-overlay pointer-events-none"
      ></div>
      {%- if section.settings.product_image != blank -%}
        {{
          section.settings.product_image
          | image_url: width: 800
          | image_tag: class: 'w-full h-full object-cover mix-blend-multiply opacity-90'
        }}
      {%- else -%}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover mix-blend-multiply opacity-90' }}
      {%- endif -%}
    </div>
  </div>

  <!-- Early VIP Reward Access -->
  <section class="px-6 mb-8 relative z-20 animate-slide-up w-full max-w-2xl mx-auto">
    <div
      class="border border-white rounded-2xl p-4 shadow-sm flex items-center gap-4 relative overflow-hidden group"
      style="background: {{ section.settings.vip_bg_gradient }};"
    >
      <div
        class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10 mix-blend-overlay pointer-events-none"
      ></div>
      <div class="w-12 h-12 shrink-0 rounded-full bg-white text-[#D4A340] flex items-center justify-center shadow-sm relative z-10">
        <i class="ph-fill ph-crown text-2xl"></i>
      </div>
      <div class="flex-grow relative z-10">
        <h3 class="font-serif text-sm font-bold text-[#1A1A1A] mb-0.5" style="margin: 0 0 2px 0;">
          {{ section.settings.vip_title }}
        </h3>
        <p class="font-sans text-[10px] text-[#1A1A1A]/70 leading-tight mb-2 pr-2" style="margin: 0 0 8px 0;">
          {{ section.settings.vip_description }}
        </p>
        <a
          href="{{ section.settings.vip_button_link | default: '#' }}"
          class="inline-block bg-white text-[#1A1A1A] text-[10px] font-bold uppercase tracking-wider px-4 py-1.5 rounded-full hover:bg-[#1A1A1A] hover:text-white transition shadow-sm border border-[#E5E5E5] w-max"
        >
          {{ section.settings.vip_button_label }}
        </a>
      </div>
    </div>
  </section>
</div>

{% schema %}
{
  "name": "QR Auth Hero",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Authentication"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Italic Subheading",
      "default": "Successful."
    },
    {
      "type": "text",
      "id": "welcome_text",
      "label": "Welcome Text",
      "default": "Welcome to the Luma family."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "You are now holding our most advanced barrier-repair technology. Prepare for a total skin reset."
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "color_background",
      "id": "product_bg_gradient",
      "label": "Product Background",
      "default": "linear-gradient(135deg, #E0EDF8 0%, #E6DEF2 100%)"
    },
    {
      "type": "text",
      "id": "vip_title",
      "label": "VIP Title",
      "default": "Your VIP Perk"
    },
    {
      "type": "textarea",
      "id": "vip_description",
      "label": "VIP Description",
      "default": "Review this formula to instantly unlock 15% off your next routine upgrade."
    },
    {
      "type": "text",
      "id": "vip_button_label",
      "label": "VIP Button Label",
      "default": "Review & Unlock"
    },
    {
      "type": "url",
      "id": "vip_button_link",
      "label": "VIP Button Link"
    },
    {
      "type": "color_background",
      "id": "vip_bg_gradient",
      "label": "VIP Box Background",
      "default": "linear-gradient(135deg, #E0EDF8 0%, #E6DEF2 100%)"
    }
  ],
  "presets": [
    {
      "name": "QR Auth Hero"
    }
  ]
}
{% endschema %}
