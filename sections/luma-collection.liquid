{%- comment -%}
  Luma Collection Section (Native Theme Blocks Version)
  Acts as a container for `@theme` blocks (like luma-pill, headings) and `luma-collection-card` blocks.
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Section Variables */
  .luma-collection-{{ section.id }} {
    --luma-card-radius: {{ section.settings.card_radius }}px;
  }

  /* Core Layout */
  .luma-collection__blocks {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    column-gap: 24px;
    row-gap: 16px;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 16px;
  }

  @media screen and (min-width: 750px) {
    .luma-collection__blocks {
      column-gap: 32px;
      padding: 0 50px;
    }
  }

  /* Hide raw style and script tags aggressively */
  .luma-collection__blocks > style,
  .luma-collection__blocks > script {
    display: none !important;
  }

  /* Any block that isn't a custom card spans full width for headers */
  .luma-collection__blocks > *:not(.luma-card-container):not(style):not(script) {
    width: 100%;
    /* We DO NOT force flex or center alignment here so native blocks respect their own settings */
  }

  /* Keep the cards in the track */
  .luma-collection__blocks > .luma-card-container,
  .luma-collection__blocks > *:has(.luma-card-container) {
    display: block;
    width: 100%;
    margin-top: 16px; /* Separation from header */
  }

  @media (min-width: 1024px) {
    .luma-collection__blocks > .luma-card-container,
    .luma-collection__blocks > *:has(.luma-card-container) {
      width: calc((100% - 64px) / 3);
    }
  }

  /* Luma Card Styles */
  .luma-card {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    aspect-ratio: 4 / 5;
    border-radius: var(--luma-card-radius);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94),
                box-shadow 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    background-color: #F9F9F9; /* Fallback */
    isolation: isolate;
  }

  @media (min-width: 768px) {
    .luma-card {
      aspect-ratio: 3 / 4;
    }
  }

  .luma-card:hover {
    transform: translateY(-4px) scale(1.01);
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.15);
  }

  /* Background Image */
  .luma-card__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .luma-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.8s ease;
  }

  .luma-card:hover .luma-card__image {
    transform: scale(1.05);
  }

  /* Gradient Overlays */
  .luma-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    mix-blend-mode: multiply;
    transition: opacity 0.5s ease;
  }

  .luma-card__overlay--barrier {
    background: linear-gradient(135deg, #1C2B59 0%, #462A5A 50%, #462A5A 100%);
  }

  .luma-card__overlay--brightening {
    background: linear-gradient(135deg, #FFD8A8 0%, #F59F6C 50%, #F59F6C 100%);
  }

  .luma-card__overlay--sunscreen {
    background: linear-gradient(135deg, #FEF08A 0%, #FFFFFF 50%, #FFFFFF 100%);
  }

  /* Content Overlay (Top + Bottom) */
  .luma-card__content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding: 24px;
    pointer-events: none; /* Let clicks pass to the card */
  }

  /* Badge (Top Left) */
  .luma-card__badge-wrapper {
    display: flex;
    justify-content: flex-start;
  }

  .luma-card__badge {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.4);
    color: #fff;
    padding: 6px 14px;
    border-radius: 9999px;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .luma-card--brightening .luma-card__badge,
  .luma-card--sunscreen .luma-card__badge {
    color: #1F2937;
    background: rgba(255, 255, 255, 0.4);
    border-color: rgba(255, 255, 255, 0.6);
  }

  /* Info Box (Bottom) */
  .luma-card__info {
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-radius: calc(var(--luma-card-radius) - 8px);
    padding: 24px;
    background: rgba(255, 255, 255, 0.8); /* Opacity can be overridden per card block */
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.05);
    transition: transform 0.4s ease, background 0.4s ease;
    border: 1px solid rgba(255,255,255,0.4);
  }

  .luma-card:hover .luma-card__info {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.9) !important;
  }

  .luma-card__title {
    margin: 0 0 8px 0;
    font-size: 20px;
    font-weight: 500;
    color: #1a1a1a;
    line-height: 1.2;
  }

  .luma-card__desc {
    margin: 0 0 16px 0;
    font-size: 14px;
    color: #555;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .luma-card__cta {
    display: inline-flex;
    align-items: center;
    font-size: 13px;
    font-weight: 600;
    color: #1a1a1a;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    gap: 8px;
    transition: gap 0.3s ease;
  }

  .luma-card__cta svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .luma-card:hover .luma-card__cta {
    gap: 12px;
  }
{%- endstyle -%}

<div class="luma-collection section-{{ section.id }}-padding luma-collection-{{ section.id }}">
  <div class="luma-collection__blocks">
    {% content_for 'blocks' %}
  </div>
</div>

{% schema %}
{
  "name": "Luma Collection Grid",
  "class": "luma-collection-section",
  "settings": [
    {
      "type": "range",
      "id": "card_radius",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Card Corner Radius",
      "default": 32
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 64
    }
  ],
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "presets": [
    {
      "name": "Luma Collection Grid",
      "blocks": [
        {
          "type": "luma-pill"
        },
        {
          "type": "luma-collection-card"
        },
        {
          "type": "luma-collection-card"
        },
        {
          "type": "luma-collection-card"
        }
      ]
    }
  ]
}
{% endschema %}
