{% style %}
  .luma-dossier-flow {
    background-color: #ffffff;
    padding: 3rem 1.5rem;
  }
  @media (min-width: 768px) {
    .luma-dossier-flow {
      padding: 6rem 2rem;
    }
  }

  .luma-dossier-flow__container {
    max-width: 72rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }
  @media (min-width: 768px) {
    .luma-dossier-flow__container {
      gap: 6rem;
    }
  }

  .luma-dossier {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 4rem;
    scroll-margin-top: 6rem; /* Adjust for sticky header */
  }
  @media (min-width: 768px) {
    .luma-dossier {
      flex-direction: row;
      gap: 2.5rem;
      align-items: flex-start;
      padding-bottom: 6rem;
      scroll-margin-top: 8rem;
    }
  }
  @media (min-width: 1024px) {
    .luma-dossier {
      gap: 4rem;
    }
  }

  /* Left Sticky Visual */
  .luma-dossier__left {
    width: 100%;
    position: relative;
  }
  @media (min-width: 768px) {
    .luma-dossier__left {
      width: 41.666%; /* 5/12 */
      position: sticky;
      top: 8rem;
    }
  }

  .luma-dossier__image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    border-radius: 2rem;
    overflow: hidden;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  @media (min-width: 640px) {
    .luma-dossier__image-wrapper {
      aspect-ratio: 1 / 1;
    }
  }
  @media (min-width: 768px) {
    .luma-dossier__image-wrapper {
      aspect-ratio: 4 / 5;
    }
  }

  .luma-dossier__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }
  .luma-dossier__image-wrapper:hover .luma-dossier__image {
    transform: scale(1.05);
  }

  .luma-dossier__image-label {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    border: 1px solid rgba(255, 255, 255, 0.5);
  }
  @media (min-width: 768px) {
    .luma-dossier__image-label {
      bottom: 1.5rem;
      left: 1.5rem;
    }
  }

  /* Right Content */
  .luma-dossier__right {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 0.5rem;
  }
  @media (min-width: 768px) {
    .luma-dossier__right {
      width: 58.333%; /* 7/12 */
      padding-top: 2.5rem;
    }
  }

  .luma-dossier__header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .luma-dossier__symbols {
    display: flex;
  }
  .luma-dossier__symbol-circle {
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    position: relative;
  }
  @media (min-width: 768px) {
    .luma-dossier__symbol-circle {
      width: 3.5rem;
      height: 3.5rem;
      font-size: 1.5rem;
    }
  }

  /* Overlapping multiple symbols */
  .luma-dossier__symbol-circle:nth-child(2) {
    margin-left: -0.75rem;
    z-index: 10;
  }
  @media (min-width: 768px) {
    .luma-dossier__symbol-circle:nth-child(2) {
      margin-left: -1rem;
    }
  }

  .luma-dossier__heading {
    font-family: 'Playfair Display', serif;
    font-size: 1.875rem;
    color: #1a1a1a;
    margin-bottom: 0.25rem;
    line-height: 1.1;
  }
  @media (min-width: 768px) {
    .luma-dossier__heading {
      font-size: 2.25rem;
    }
  }

  .luma-dossier__subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: rgba(26, 26, 26, 0.5);
  }

  /* Text Blocks */
  .luma-dossier__text-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  @media (min-width: 768px) {
    .luma-dossier__text-container {
      gap: 2rem;
      margin-bottom: 2.5rem;
    }
  }

  .luma-dossier__text-block h4 {
    font-family: 'Playfair Display', serif;
    font-size: 1.125rem;
    color: #1a1a1a;
    margin-bottom: 0.5rem;
  }
  @media (min-width: 768px) {
    .luma-dossier__text-block h4 {
      font-size: 1.25rem;
    }
  }

  .luma-dossier__text-block .luma-rte p {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: rgba(26, 26, 26, 0.8);
    line-height: 1.625;
    font-weight: 300;
  }
  @media (min-width: 768px) {
    .luma-dossier__text-block .luma-rte p {
      font-size: 1rem;
    }
  }
  .luma-dossier__text-block .luma-rte em {
    font-style: italic;
  }

  /* Product Paring Card */
  .luma-pairing-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background-color: #fafafa;
    border-radius: 1rem;
    padding: 0.75rem;
    border: 1px solid #e5e5e5;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }
  @media (min-width: 768px) {
    .luma-pairing-card {
      gap: 1rem;
      padding: 1rem;
      border-radius: 1rem;
    }
  }
  .luma-pairing-card:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .luma-pairing-card__img-wrapper {
    width: 4rem;
    height: 4rem;
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid #ffffff;
    flex-shrink: 0;
    position: relative;
    box-shadow: inset 0 2px 4px 0 rgba(0, 0, 0, 0.06);
  }
  @media (min-width: 768px) {
    .luma-pairing-card__img-wrapper {
      width: 5rem;
      height: 5rem;
    }
  }
  .luma-pairing-card__texture {
    position: absolute;
    inset: 0;
    background-image: url('https://www.transparenttextures.com/patterns/cubes.png');
    opacity: 0.2;
    mix-blend-mode: overlay;
    z-index: 1;
  }
  .luma-pairing-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    mix-blend-mode: multiply;
    opacity: 0.9;
    transition: transform 0.5s ease;
    position: relative;
    z-index: 2;
  }
  .luma-pairing-card:hover .luma-pairing-card__img {
    transform: scale(1.1);
  }

  .luma-pairing-card__info {
    flex-grow: 1;
  }
  .luma-pairing-card__eyebrow {
    display: block;
    font-family: 'Inter', sans-serif;
    font-size: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }
  @media (min-width: 768px) {
    .luma-pairing-card__eyebrow {
      font-size: 0.5625rem;
    }
  }
  .luma-pairing-card__title {
    display: block;
    font-family: 'Playfair Display', serif;
    font-size: 1.125rem;
    color: #1a1a1a;
    line-height: 1.1;
    transition: color 0.3s ease;
  }
  @media (min-width: 768px) {
    .luma-pairing-card__title {
      font-size: 1.25rem;
    }
  }

  .luma-pairing-card__arrow {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 9999px;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #1a1a1a;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e5e5;
    flex-shrink: 0;
    transition: all 0.3s ease;
    margin-right: 0.25rem;
  }
  @media (min-width: 768px) {
    .luma-pairing-card__arrow {
      width: 3rem;
      height: 3rem;
      margin-right: 0.5rem;
    }
  }
  .luma-pairing-card:hover .luma-pairing-card__arrow {
    background-color: #1a1a1a;
    color: #ffffff;
  }
{% endstyle %}

<section class="luma-dossier-flow">
  <div class="luma-dossier-flow__container">
    {% for block in section.blocks %}
      <!-- Provide an anchor ID linking back to the directory -->
      <article id="{{ block.settings.anchor_id }}" class="luma-dossier" {{ block.shopify_attributes }}>
        <!-- Sticky Left: Visual -->
        <div class="luma-dossier__left">
          <div class="luma-dossier__image-wrapper">
            {% if block.settings.visual_image != blank %}
              {{
                block.settings.visual_image
                | image_url: width: 1000
                | image_tag: class: 'luma-dossier__image', loading: 'lazy'
              }}
            {% else %}
              <img
                src="https://images.unsplash.com/photo-1506057213367-028a17ec52e5?q=80&w=800&auto=format&fit=crop"
                class="luma-dossier__image"
                loading="lazy"
                alt="Placeholder Botanical"
              >
            {% endif %}

            {% if block.settings.visual_label != blank %}
              <div class="luma-dossier__image-label" style="color: {{ block.settings.color_secondary }};">
                {{ block.settings.visual_label }}
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Right: Content -->
        <div class="luma-dossier__right">
          <div class="luma-dossier__header">
            <div class="luma-dossier__symbols">
              <div
                class="luma-dossier__symbol-circle"
                style="background-color: {{ block.settings.color_primary_light }}; color: {{ block.settings.color_primary_dark }}; border: 1px solid {{ block.settings.color_primary_border }};"
              >
                {{ block.settings.symbol_1 }}
              </div>
              {% if block.settings.symbol_2 != blank %}
                <div
                  class="luma-dossier__symbol-circle"
                  style="background-color: {{ block.settings.color_secondary_light }}; color: {{ block.settings.color_secondary_dark }}; border: 1px solid {{ block.settings.color_secondary_border }};"
                >
                  {{ block.settings.symbol_2 }}
                </div>
              {% endif %}
            </div>
            <div>
              <h2 class="luma-dossier__heading">{{ block.settings.heading }}</h2>
              <p class="luma-dossier__subtitle">{{ block.settings.subtitle }}</p>
            </div>
          </div>

          <div class="luma-dossier__text-container">
            {% if block.settings.text_block_1_title != blank %}
              <div class="luma-dossier__text-block">
                <h4>{{ block.settings.text_block_1_title }}</h4>
                <div class="luma-rte">{{ block.settings.text_block_1_content }}</div>
              </div>
            {% endif %}
            {% if block.settings.text_block_2_title != blank %}
              <div class="luma-dossier__text-block">
                <h4>{{ block.settings.text_block_2_title }}</h4>
                <div class="luma-rte">{{ block.settings.text_block_2_content }}</div>
              </div>
            {% endif %}
          </div>

          <!-- Paring Card Logic -->
          {% assign pairing_product = block.settings.pairing_product %}
          {% if pairing_product != blank %}
            <a
              href="{{ pairing_product.url }}"
              class="luma-pairing-card"
              style="border-color: {{ block.settings.color_secondary_light }};"
            >
              <div class="luma-pairing-card__img-wrapper" style="background: {{ block.settings.pairing_gradient }};">
                <div class="luma-pairing-card__texture"></div>
                {% if pairing_product.featured_image != blank %}
                  {{
                    pairing_product.featured_image
                    | image_url: width: 200
                    | image_tag: class: 'luma-pairing-card__img', loading: 'lazy'
                  }}
                {% endif %}
              </div>
              <div class="luma-pairing-card__info">
                <span class="luma-pairing-card__eyebrow" style="color: {{ block.settings.color_secondary_dark }};"
                  >Formulated In</span
                >
                <span class="luma-pairing-card__title">{{ pairing_product.title }}</span>
              </div>
              <div class="luma-pairing-card__arrow">
                <i class="ph-bold ph-arrow-right text-base md:text-lg"></i>
              </div>
            </a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</section>

