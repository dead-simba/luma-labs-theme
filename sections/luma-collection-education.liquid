{% style %}
  .luma-education {
    padding: 3rem 1.5rem;
    background-color: #FAFAFA;
    border-bottom: 1px solid #E5E5E5;
    position: relative;
    overflow: hidden;
  }
  @media (min-width: 768px) {
    .luma-education { padding: 4rem 2rem; }
  }

  .luma-education__container {
    max-width: 48rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .luma-education__icon-wrapper {
    width: 5.5rem;
    height: 5.5rem;
    border-radius: 9999px;
    background-color: {{ section.settings.icon_bg_color | default: '#eff6ff' }};
    border: 4px solid #FFFFFF;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.icon_color | default: '#1e40af' }};
    position: relative;
    margin-bottom: 2rem;
  }
  .luma-education__icon-wrapper i {
    font-size: 2rem;
    position: relative;
    z-index: 1;
  }
  .luma-education__icon-pulse {
    position: absolute;
    inset: 0;
    background-color: {{ section.settings.icon_color | default: '#1e40af' }};
    border-radius: 9999px;
    opacity: 0.15;
    animation: lumaPulse 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  @keyframes lumaPulse {
    75%, 100% {
      transform: scale(1.6);
      opacity: 0;
    }
  }

  .luma-education__heading {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    color: #1A1A1A;
    margin-bottom: 1.25rem;
    line-height: 1.2;
  }
  @media (min-width: 768px) {
    .luma-education__heading { font-size: 2.75rem; }
  }

  .luma-education__text {
    font-family: 'Inter', sans-serif;
    color: rgba(26,26,26,0.7);
    line-height: 1.7;
    font-weight: 300;
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }

  .luma-education__quote {
    background: #FFFFFF;
    border: 1px solid #E5E5E5;
    border-radius: 1.5rem;
    padding: 2.5rem 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    position: relative;
    margin-top: 1rem;
    width: 100%;
  }
  @media (min-width: 768px) {
    .luma-education__quote { padding: 3rem; }
  }
  .luma-education__quote::before {
    content: 'â€œ';
    font-family: 'Playfair Display', serif;
    position: absolute;
    top: -1.75rem;
    left: 50%;
    transform: translateX(-50%);
    font-size: 4rem;
    color: #D4A340;
    line-height: 1;
    background: #FAFAFA;
    padding: 0 1rem;
  }
  .luma-education__quote-text {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    font-size: 1.25rem;
    color: #1A1A1A;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  .luma-education__quote-author {
    font-size: 0.75rem;
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: #D4A340;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .luma-education__quote-author::before {
    content: '';
    width: 1.5rem;
    height: 1px;
    background-color: #D4A340;
    margin-right: 0.75rem;
  }
  .luma-education__quote-author::after {
    content: '';
    width: 1.5rem;
    height: 1px;
    background-color: #D4A340;
    margin-left: 0.75rem;
  }
{% endstyle %}

<section class="luma-education">
  <div class="luma-education__container">
    <div class="luma-education__icon-wrapper">
      <i class="ph-fill {{ section.settings.icon_class }}"></i>
      <div class="luma-education__icon-pulse"></div>
    </div>

    <h2 class="luma-education__heading">{{ section.settings.heading }}</h2>
    <p class="luma-education__text">{{ section.settings.text }}</p>

    {% if section.settings.quote_text != blank %}
      <blockquote class="luma-education__quote">
        <p class="luma-education__quote-text">"{{ section.settings.quote_text }}"</p>
        <footer class="luma-education__quote-author">{{ section.settings.quote_author }}</footer>
      </blockquote>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Collection Education",
  "settings": [
    {
      "type": "text",
      "id": "icon_class",
      "label": "Phosphor Icon Class",
      "default": "ph-shield-warning"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#1e40af"
    },
    {
      "type": "color",
      "id": "icon_bg_color",
      "label": "Icon Background Color",
      "default": "#eff6ff"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why is my barrier damaged?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "A compromised stratum corneum occurs when your skin's natural lipid ratio is stripped away..."
    },
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote Text",
      "default": "I ruined my skin with harsh peeling acids. This liquid-crystal formula stopped the stinging and redness in exactly 48 hours."
    },
    {
      "type": "text",
      "id": "quote_author",
      "label": "Quote Author",
      "default": "Sarah T., Verified Buyer"
    }
  ],
  "presets": [
    {
      "name": "Collection Education"
    }
  ]
}
{% endschema %}
