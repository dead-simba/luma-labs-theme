{% style %}
  .luma-education {
    padding: 4rem 1.5rem;
    background-color: #FFFFFF;
    border-bottom: 1px solid #E5E5E5;
    position: relative;
    overflow: hidden;
  }
  @media (min-width: 768px) {
    .luma-education { padding: 8rem 2rem; }
  }
  .luma-education__container {
    max-width: 80rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
  }
  @media (min-width: 768px) {
    .luma-education__container {
      flex-direction: row;
      gap: 4rem;
    }
  }
  .luma-education__icon-col {
    width: 100%;
    display: flex;
    justify-content: center;
  }
  @media (min-width: 768px) {
    .luma-education__icon-col {
      width: 33.333333%;
      justify-content: flex-end;
    }
  }
  .luma-education__icon-wrapper {
    width: 6rem;
    height: 6rem;
    border-radius: 9999px;
    background-color: {{ section.settings.icon_bg_color | default: '#eff6ff' }};
    border: 4px solid #FFFFFF;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.icon_color | default: '#1e40af' }};
    position: relative;
  }
  .luma-education__icon-wrapper i {
    font-size: 2.25rem;
    position: relative;
    z-index: 10;
  }
  .luma-education__icon-pulse {
    position: absolute;
    inset: 0;
    background-color: {{ section.settings.icon_color | default: '#1e40af' }};
    border-radius: 9999px;
    opacity: 0.2;
    animation: lumaPulse 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  @keyframes lumaPulse {
    75%, 100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }
  .luma-education__content-col {
    width: 100%;
    text-align: center;
  }
  @media (min-width: 768px) {
    .luma-education__content-col {
      width: 66.666667%;
      text-align: left;
    }
  }
  .luma-education__heading {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: #1A1A1A;
    margin-bottom: 0.75rem;
  }
  @media (min-width: 768px) {
    .luma-education__heading { font-size: 1.875rem; }
  }
  .luma-education__text {
    font-family: 'Inter', sans-serif;
    color: rgba(26,26,26,0.7);
    line-height: 1.625;
    font-weight: 300;
    max-width: 42rem;
  }
  .luma-education__quote {
    margin-top: 1.5rem;
    border-left: 2px solid #D4A340;
    padding-left: 1.25rem;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
  }
  .luma-education__quote-text {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    font-size: 1.125rem;
    color: rgba(26,26,26,0.8);
    margin-bottom: 0.5rem;
  }
  .luma-education__quote-author {
    font-size: 0.75rem;
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: #D4A340;
  }
{% endstyle %}

<section class="luma-education">
  <div class="luma-education__container">
    <div class="luma-education__icon-col">
      <div class="luma-education__icon-wrapper">
        <i class="ph-fill {{ section.settings.icon_class }}"></i>
        <div class="luma-education__icon-pulse"></div>
      </div>
    </div>
    <div class="luma-education__content-col">
      <h2 class="luma-education__heading">{{ section.settings.heading }}</h2>
      <p class="luma-education__text">{{ section.settings.text }}</p>

      {% if section.settings.quote_text != blank %}
        <blockquote class="luma-education__quote">
          <p class="luma-education__quote-text">"{{ section.settings.quote_text }}"</p>
          <footer class="luma-education__quote-author">&mdash; {{ section.settings.quote_author }}</footer>
        </blockquote>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Education",
  "settings": [
    {
      "type": "text",
      "id": "icon_class",
      "label": "Phosphor Icon Class",
      "default": "ph-shield-warning"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#1e40af"
    },
    {
      "type": "color",
      "id": "icon_bg_color",
      "label": "Icon Background Color",
      "default": "#eff6ff"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why is my barrier damaged?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "A compromised stratum corneum occurs when your skin's natural lipid ratio is stripped away..."
    },
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote Text",
      "default": "I ruined my skin with harsh peeling acids. This liquid-crystal formula stopped the stinging and redness in exactly 48 hours."
    },
    {
      "type": "text",
      "id": "quote_author",
      "label": "Quote Author",
      "default": "Sarah T., Verified Buyer"
    }
  ],
  "presets": [
    {
      "name": "Collection Education"
    }
  ]
}
{% endschema %}
