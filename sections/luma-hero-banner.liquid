{% schema %}
{
  "name": "Luma Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image (Optional)",
      "info": "Falls back to desktop image if left blank."
    },
    {
      "type": "range",
      "id": "min_height_desktop",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Desktop Min Height",
      "default": 400
    },
    {
      "type": "range",
      "id": "min_height_mobile",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Mobile Min Height",
      "default": 350
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Turn Sun Protection into<br><span class=\"luma-hero-highlight\">Skin Optimization.</span>",
      "info": "Use <br> for line breaks and wrap text in <span class=\"luma-hero-highlight\"> to apply the accent color."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Zero white cast. Zero stickiness. 100% defense."
    },
    {
      "type": "header",
      "content": "Overlay Settings"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 25
    },
    {
      "type": "range",
      "id": "overlay_blur",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Backdrop Blur",
      "default": 2
    },
    {
      "type": "header",
      "content": "Text Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Heading / Subheading Color",
      "default": "#1A1A1A"
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Highlight Color (Italicised Text)",
      "default": "#C5A065"
    }
  ],
  "presets": [
    {
      "name": "Luma Hero Banner"
    }
  ]
}
{% endschema %}

{%- assign overlay_alpha = section.settings.overlay_opacity | divided_by: 100.0 -%}
{%- assign overlay_bg = section.settings.overlay_color | color_modify: 'alpha', overlay_alpha -%}

{%- style -%}
  #shopify-section-{{ section.id }} .luma-hero-wrapper {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    min-height: {{ section.settings.min_height_mobile }}px;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} .luma-hero-wrapper {
      min-height: {{ section.settings.min_height_desktop }}px;
      /* Also set a responsive viewport height on desktop for true hero feel */
      height: 40vh;
    }
  }

  /* Image defaults */
  #shopify-section-{{ section.id }} .luma-hero-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  /* Show/hide logic for mobile vs desktop */
  {% if section.settings.image_mobile != blank %}
    #shopify-section-{{ section.id }} .luma-hero-img.desktop-only {
      display: none;
    }
    #shopify-section-{{ section.id }} .luma-hero-img.mobile-only {
      display: block;
    }
    @media (min-width: 768px) {
      #shopify-section-{{ section.id }} .luma-hero-img.desktop-only {
        display: block;
      }
      #shopify-section-{{ section.id }} .luma-hero-img.mobile-only {
        display: none;
      }
    }
  {% endif %}

  /* Overlay */
  #shopify-section-{{ section.id }} .luma-hero-overlay {
    position: absolute;
    inset: 0;
    background-color: {{ overlay_bg }};
    backdrop-filter: blur({{ section.settings.overlay_blur }}px);
    -webkit-backdrop-filter: blur({{ section.settings.overlay_blur }}px);
    z-index: 2;
  }

  /* Content */
  #shopify-section-{{ section.id }} .luma-hero-content {
    position: relative;
    z-index: 3;
    text-align: center;
    padding: 0 20px;
    max-width: 1280px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .luma-hero-heading {
    font-family: var(--font-heading--family), serif;
    font-size: 32px;
    line-height: 1.1;
    margin-bottom: 16px;
    font-weight: 400;
    color: {{ section.settings.text_color }};
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} .luma-hero-heading {
      font-size: 56px; /* md:text-6xl approx */
    }
  }

  #shopify-section-{{ section.id }} .luma-hero-highlight {
    font-style: italic;
    color: {{ section.settings.highlight_color }};
  }

  #shopify-section-{{ section.id }} .luma-hero-subheading {
    font-family: var(--font-body--family), sans-serif;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    font-size: 14px;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
  }
{%- endstyle -%}

<div class="luma-hero-wrapper">
  {%- if section.settings.image_desktop != blank -%}
    {%- if section.settings.image_mobile != blank -%}
      <!-- Mobile Image -->
      <img
        src="{{ section.settings.image_mobile | image_url: width: 800 }}"
        class="luma-hero-img mobile-only"
        loading="lazy"
        alt="{{ section.settings.image_mobile.alt | escape }}"
        width="{{ section.settings.image_mobile.width }}"
        height="{{ section.settings.image_mobile.height }}"
      >
      <!-- Desktop Image -->
      <img
        src="{{ section.settings.image_desktop | image_url: width: 2500 }}"
        class="luma-hero-img desktop-only"
        loading="lazy"
        alt="{{ section.settings.image_desktop.alt | escape }}"
        width="{{ section.settings.image_desktop.width }}"
        height="{{ section.settings.image_desktop.height }}"
      >
    {%- else -%}
      <!-- Single image for all devices -->
      <img
        src="{{ section.settings.image_desktop | image_url: width: 2500 }}"
        class="luma-hero-img"
        loading="lazy"
        alt="{{ section.settings.image_desktop.alt | escape }}"
        width="{{ section.settings.image_desktop.width }}"
        height="{{ section.settings.image_desktop.height }}"
      >
    {%- endif -%}
  {%- else -%}
    <!-- Placeholder if no image provided -->
    <div class="luma-hero-img" style="background-color: #f3f4f6;"></div>
  {%- endif -%}

  <div class="luma-hero-overlay"></div>

  <div class="luma-hero-content">
    {%- if section.settings.heading != blank -%}
      <h2 class="luma-hero-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="luma-hero-subheading">{{ section.settings.subheading | escape }}</p>
    {%- endif -%}
  </div>
</div>
