<div class="px-6 py-4 relative z-20" style="background-color: #FAFAFA;">
  <div class="bg-white rounded-3xl p-6 shadow-xl border border-[#E5E5E5]">
    <div class="flex items-center justify-between mb-6">
      <h2 class="font-serif text-xl text-[#1A1A1A]">{{ section.settings.heading }}</h2>
      <i class="ph-fill ph-flask text-[#D4A340] text-2xl"></i>
    </div>
    <p class="text-xs text-[#1A1A1A]/60 mb-6 font-medium">{{ section.settings.description }}</p>

    <div class="space-y-4">
      {%- for block in section.blocks -%}
        <div
          class="flex gap-4 p-4 rounded-2xl border border-white"
          style="background-color: {{ block.settings.bg_color }};"
          {{ block.shopify_attributes }}
        >
          <div class="mt-0.5" style="color: {{ block.settings.icon_color }};">
            <i class="ph-fill {{ block.settings.icon }} text-xl"></i>
          </div>
          <div>
            <h4 class="font-serif text-sm text-[#1A1A1A] font-bold mb-1">{{ block.settings.title }}</h4>
            <p class="text-xs text-[#1A1A1A]/80 leading-relaxed">{{ block.settings.text }}</p>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "QR Formulation Secrets",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Formulation Hacks"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "To unlock 100% of this formula's potential, skip the standard advice and follow our lab protocols:"
    }
  ],
  "blocks": [
    {
      "type": "secret",
      "name": "Secret",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Phosphor Icon Name",
          "default": "ph-drop"
        },
        {
          "type": "color",
          "id": "icon_color",
          "label": "Icon Color",
          "default": "#2563EB"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#E6F0F9"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "The 'Damp Skin' Rule"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Never apply to completely dry skin. The Hyaluronic Acid acts as a sponge—applying it to slightly damp skin pulls that moisture deep into the epidermis."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "QR Formulation Secrets",
      "blocks": [
        {
          "type": "secret",
          "settings": {
            "icon": "ph-drop",
            "icon_color": "#2563EB",
            "bg_color": "#E5F0FA",
            "title": "The 'Damp Skin' Rule",
            "text": "Never apply to completely dry skin. The Hyaluronic Acid acts as a sponge—applying it to slightly damp skin pulls that moisture deep into the epidermis."
          }
        },
        {
          "type": "secret",
          "settings": {
            "icon": "ph-warning-circle",
            "icon_color": "#F97316",
            "bg_color": "#FFF7ED",
            "title": "The Acid Buffer",
            "text": "Using strong AHA/BHA exfoliants? Wait 10 minutes before applying this cream to ensure the Matrixyl 3000™ peptides remain perfectly stable."
          }
        }
      ]
    }
  ]
}
{% endschema %}
