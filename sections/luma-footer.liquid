{%- style -%}
  .luma-footer {
    background-color: {{ section.settings.bg_color }};
    border-top: 1px solid {{ section.settings.border_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-family: inherit;
  }
  .luma-footer__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .luma-footer__grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: {{ section.settings.mobile_gap }}px; /* Adjustable Mobile Gap */
  }
  @media (min-width: 768px) {
    .luma-footer__grid {
      gap: {{ section.settings.desktop_gap }}px; /* Adjustable Desktop Gap */
    }
  }

  /* Brand Column */
  .luma-footer__col-brand {
    flex: 1 1 250px;
    max-width: 350px;
  }
  .luma-footer__col-links-1,
  .luma-footer__col-links-2 {
    flex: 1 1 120px;
    max-width: 200px;
  }
  .luma-footer__col-newsletter {
    flex: 1 1 250px;
    max-width: 350px;
  }
  .luma-footer__brand-title {
    font-size: 24px;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: {{ section.settings.text_color }};
    margin-bottom: 24px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }
  .luma-footer__brand-title span {
    font-weight: 300;
  }
  .luma-footer__brand-text {
    font-size: 14px;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 24px;
    max-width: 320px;
  }
  .luma-footer__socials {
    display: flex;
    gap: 16px;
  }
  .luma-footer__social-link {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: transparent;
    color: {{ section.settings.text_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid {{ section.settings.border_color }};
    opacity: 0.8;
  }
  .luma-footer__social-link:hover {
    background-color: {{ section.settings.accent_color }};
    color: #FFFFFF;
    border-color: {{ section.settings.accent_color }};
    opacity: 1;
  }

  /* Link Columns */
  .luma-footer__heading {
    font-family: "Playfair Display", serif;
    font-weight: 500;
    letter-spacing: 0.02em;
    font-size: 16px;
    color: {{ section.settings.menu_heading_color }}; /* Adjustable Heading Color */
    margin: 0 0 20px 0;
  }
  .luma-footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .luma-footer__link {
    font-size: 14px;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    text-decoration: none;
    transition: color 0.2s ease, opacity 0.2s ease;
  }
  .luma-footer__link:hover {
    color: {{ section.settings.accent_color }};
    opacity: 1;
  }

  /* Newsletter Column */
  .luma-footer__newsletter-text {
    font-size: 14px;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    margin-bottom: 20px;
    line-height: 1.5;
  }
  .luma-footer__form {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .luma-footer__input {
    width: 100%;
    background-color: #FFFFFF;
    border: 1px solid {{ section.settings.border_color }};
    padding: 12px 16px;
    border-radius: 4px;
    font-size: 14px;
    color: #2C2C2C;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }
  .luma-footer__input:focus {
    outline: none;
    border-color: {{ section.settings.accent_color }};
    box-shadow: 0 0 0 1px {{ section.settings.accent_color }};
  }
  .luma-footer__button {
    width: 100%;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-family: inherit;
    font-weight: 600;
    letter-spacing: 0.05em;
    padding: 12px 16px;
    border-radius: 4px;
    font-size: 13px;
    text-transform: uppercase;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  .luma-footer__button:hover {
    background-color: {{ section.settings.accent_color }};
  }
{%- endstyle -%}

<footer class="luma-footer">
  <div class="luma-footer__container">
    <div class="luma-footer__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'brand_information' -%}
            <div class="luma-footer__col-brand" {{ block.shopify_attributes }}>
              <a href="{{ routes.root_url }}" class="luma-footer__brand-title">
                {%- if block.settings.logo_image != blank -%}
                  <div style="width: {{ block.settings.logo_width }}px; max-width: 100%;">
                    {{
                      block.settings.logo_image
                      | image_url: width: 600
                      | image_tag: style: 'width: 100%; height: auto;', alt: block.settings.logo_image.alt
                      | default: shop.name
                    }}
                  </div>
                {%- else -%}
                  {%- if block.settings.logo_icon != blank -%}
                    <i
                      class="ph-fill ph-{{ block.settings.logo_icon }} text-[28px]"
                      style="color: {{ section.settings.accent_color }}"
                    ></i>
                  {%- endif -%}
                  {{ block.settings.title }}
                {%- endif -%}
              </a>
              {%- if block.settings.text != blank -%}
                <p class="luma-footer__brand-text">{{ block.settings.text }}</p>
              {%- endif -%}
              <div class="luma-footer__socials">
                {%- assign insta = block.settings.instagram_link | default: settings.social_instagram_link -%}
                {%- if insta != blank -%}
                  <a href="{{ insta }}" class="luma-footer__social-link" aria-label="Instagram"
                    ><i class="ph-fill ph-instagram-logo"></i
                  ></a>
                {%- endif -%}

                {%- assign tiktok = block.settings.tiktok_link | default: settings.social_tiktok_link -%}
                {%- if tiktok != blank -%}
                  <a href="{{ tiktok }}" class="luma-footer__social-link" aria-label="TikTok"
                    ><i class="ph-fill ph-tiktok-logo"></i
                  ></a>
                {%- endif -%}

                {%- assign fb = block.settings.facebook_link | default: settings.social_facebook_link -%}
                {%- if fb != blank -%}
                  <a href="{{ fb }}" class="luma-footer__social-link" aria-label="Facebook"
                    ><i class="ph-fill ph-facebook-logo"></i
                  ></a>
                {%- endif -%}
              </div>
            </div>

          {%- when 'link_list' -%}
            <div class="luma-footer__col-links-{{ forloop.index | minus: 1 }}" {{ block.shopify_attributes }}>
              <h3 class="luma-footer__heading">{{ block.settings.heading }}</h3>
              {%- if block.settings.menu != blank -%}
                <ul class="luma-footer__list">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="luma-footer__link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'newsletter' -%}
            <div class="luma-footer__col-newsletter" {{ block.shopify_attributes }}>
              <h3 class="luma-footer__heading">{{ block.settings.heading }}</h3>
              {%- if block.settings.text != blank -%}
                <p class="luma-footer__newsletter-text">{{ block.settings.text }}</p>
              {%- endif -%}

              {%- form 'customer', id: 'ContactFooter', class: 'luma-footer__form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="luma-footer__input"
                  value="{{ form.email }}"
                  placeholder="Email Address"
                  required
                >
                <button type="submit" class="luma-footer__button" name="commit">Subscribe</button>
                {%- if form.errors -%}
                  <small style="color:red; font-size:12px;"
                    >⚠ {{ form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </small>
                {%- endif -%}
                {%- if form.posted_successfully? -%}
                  <small style="color:{{ section.settings.accent_color }}; font-size:12px;">✓ Success!</small>
                {%- endif -%}
              {%- endform -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</footer>

