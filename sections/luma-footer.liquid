  "name": "Luma Labs Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FAFAFA"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#F0F0F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#2C2C2C"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent / Gold Color",
      "default": "#D4A340"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background",
      "default": "#2C2C2C"
    },
    {
      "type": "color",
      "id": "button_text_color",
