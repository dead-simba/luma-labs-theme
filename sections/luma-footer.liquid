{%- style -%}
  .luma-footer {
    background-color: {{ section.settings.bg_color }};
    border-top: 1px solid {{ section.settings.border_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-family: inherit;
  }
  .luma-footer__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .luma-footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    margin-bottom: 48px;
  }
  @media (min-width: 768px) {
    .luma-footer__grid {
      grid-template-columns: repeat(12, 1fr);
      gap: 32px;
    }
    .luma-footer__col-brand { grid-column: span 4; }
    .luma-footer__col-links-1 { grid-column: 6 / span 2; }
    .luma-footer__col-links-2 { grid-column: span 2; }
    .luma-footer__col-newsletter { grid-column: span 3; }
  }

  /* Brand Column */
  .luma-footer__brand-title {
    font-family: "Playfair Display", serif;
    font-size: 24px;
    font-weight: 500;
    letter-spacing: -0.02em;
    color: {{ section.settings.text_color }};
    margin-bottom: 16px;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .luma-footer__brand-title span {
    font-family: "Inter", sans-serif;
    font-weight: 300;
    font-size: 18px;
  }
  .luma-footer__brand-text {
    font-size: 14px;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 24px;
    max-width: 300px;
  }
  .luma-footer__socials {
    display: flex;
    gap: 16px;
  }
  .luma-footer__social-link {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }
  .luma-footer__social-link:hover {
    background-color: {{ section.settings.accent_color }};
  }

  /* Link Columns */
  .luma-footer__heading {
    font-family: "Playfair Display", serif;
    font-weight: 600;
    font-size: 16px;
    color: {{ section.settings.text_color }};
    margin: 0 0 16px 0;
  }
  .luma-footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .luma-footer__link {
    font-size: 14px;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .luma-footer__link:hover {
    color: {{ section.settings.accent_color }};
    opacity: 1;
  }

  /* Newsletter Column */
  .luma-footer__newsletter-text {
    font-size: 14px;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    margin-bottom: 16px;
  }
  .luma-footer__form {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .luma-footer__input {
    width: 100%;
    background-color: #FFFFFF;
    border: 1px solid {{ section.settings.border_color }};
    padding: 10px 16px;
    border-radius: 4px;
    font-size: 14px;
    color: #2C2C2C;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }
  .luma-footer__input:focus {
    outline: none;
    border-color: {{ section.settings.accent_color }};
    box-shadow: 0 0 0 1px {{ section.settings.accent_color }};
  }
  .luma-footer__button {
    width: 100%;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-family: inherit;
    font-weight: 500;
    padding: 10px 16px;
    border-radius: 4px;
    font-size: 14px;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  .luma-footer__button:hover {
    background-color: {{ section.settings.accent_color }};
  }

  /* Copyright Bottom */
  .luma-footer__bottom {
    border-top: 1px solid {{ section.settings.border_color }};
    padding-top: 32px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    font-size: 12px;
    color: {{ section.settings.text_color }};
    opacity: 0.6;
  }
  @media (min-width: 768px) {
    .luma-footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
  .luma-footer__legal-links {
    display: flex;
    gap: 16px;
  }
  .luma-footer__legal-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .luma-footer__legal-link:hover {
    color: {{ section.settings.accent_color }};
    opacity: 1;
  }
{%- endstyle -%}

<footer class="luma-footer">
  <div class="luma-footer__container">
    <div class="luma-footer__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'brand_information' -%}
            <div class="luma-footer__col-brand" {{ block.shopify_attributes }}>
              <a href="{{ routes.root_url }}" class="luma-footer__brand-title">
                {%- if block.settings.logo_icon != blank -%}
                  <i
                    class="ph-fill ph-{{ block.settings.logo_icon }} text-[24px]"
                    style="color: {{ section.settings.accent_color }}"
                  ></i>
                {%- endif -%}
                {{ block.settings.title }}
              </a>
              {%- if block.settings.text != blank -%}
                <p class="luma-footer__brand-text">{{ block.settings.text }}</p>
              {%- endif -%}
              <div class="luma-footer__socials">
                {%- if settings.social_instagram_link != blank -%}
                  <a href="{{ settings.social_instagram_link }}" class="luma-footer__social-link" aria-label="Instagram"
                    ><i class="ph-fill ph-instagram-logo"></i
                  ></a>
                {%- endif -%}
                {%- if settings.social_tiktok_link != blank -%}
                  <a href="{{ settings.social_tiktok_link }}" class="luma-footer__social-link" aria-label="TikTok"
                    ><i class="ph-fill ph-tiktok-logo"></i
                  ></a>
                {%- endif -%}
                {%- if settings.social_facebook_link != blank -%}
                  <a href="{{ settings.social_facebook_link }}" class="luma-footer__social-link" aria-label="Facebook"
                    ><i class="ph-fill ph-facebook-logo"></i
                  ></a>
                {%- endif -%}
              </div>
            </div>

          {%- when 'link_list' -%}
            <div class="luma-footer__col-links-{{ forloop.index | minus: 1 }}" {{ block.shopify_attributes }}>
              <h3 class="luma-footer__heading">{{ block.settings.heading }}</h3>
              {%- if block.settings.menu != blank -%}
                <ul class="luma-footer__list">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="luma-footer__link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'newsletter' -%}
            <div class="luma-footer__col-newsletter" {{ block.shopify_attributes }}>
              <h3 class="luma-footer__heading">{{ block.settings.heading }}</h3>
              {%- if block.settings.text != blank -%}
                <p class="luma-footer__newsletter-text">{{ block.settings.text }}</p>
              {%- endif -%}

              {%- form 'customer', id: 'ContactFooter', class: 'luma-footer__form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="luma-footer__input"
                  value="{{ form.email }}"
                  placeholder="Email Address"
                  required
                >
                <button type="submit" class="luma-footer__button" name="commit">Subscribe</button>
                {%- if form.errors -%}
                  <small style="color:red; font-size:12px;"
                    >⚠ {{ form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </small>
                {%- endif -%}
                {%- if form.posted_successfully? -%}
                  <small style="color:{{ section.settings.accent_color }}; font-size:12px;">✓ Success!</small>
                {%- endif -%}
              {%- endform -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <!-- Bottom Copyright -->
    <div class="luma-footer__bottom">
      <p>
        &copy; {{ 'now' | date: '%Y' }}
        {{ shop.name }}. All rights reserved.
      </p>
      <div class="luma-footer__legal-links">
        <a href="/policies/privacy-policy" class="luma-footer__legal-link">Privacy Policy</a>
        <a href="/policies/terms-of-service" class="luma-footer__legal-link">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

