{% style %}
  .luma-ingredient-dir {
    background-color: #fafafa;
    padding: 5rem 1.5rem;
    position: relative;
    z-index: 2;
    border-bottom: 1px solid #e5e5e5;
    scroll-margin-top: 5rem;
  }
  @media (min-width: 768px) {
    .luma-ingredient-dir {
      padding: 6rem 2rem;
    }
  }

  .luma-ingredient-dir__container {
    max-width: 80rem;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .luma-ingredient-dir__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  @media (min-width: 768px) {
    .luma-ingredient-dir__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media (min-width: 1024px) {
    .luma-ingredient-dir__grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  .luma-element-card {
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 1rem;
    padding: 1.5rem;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: block;
  }

  .luma-element-card:hover {
    transform: translateY(-5px) scale(1.05);
    z-index: 5;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border-color: transparent;
  }

  /* Overlay Glow Effect */
  .luma-element-card__glow {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 0;
  }
  .luma-element-card:hover .luma-element-card__glow {
    opacity: 1;
  }

  .luma-element-card__content {
    position: relative;
    z-index: 1;
  }

  .luma-element-card__number {
    display: block;
    text-align: right;
    font-size: 0.625rem;
    color: rgba(26, 26, 26, 0.4);
    font-family: monospace;
    margin-bottom: 0.5rem;
  }

  .luma-element-card__symbol {
    font-family: 'Playfair Display', serif;
    font-size: 2.25rem;
    color: #1a1a1a;
    margin-bottom: 0.25rem;
    line-height: 1.1;
  }

  .luma-element-card__name {
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(26, 26, 26, 0.8);
    margin-bottom: 0.25rem;
  }

  .luma-element-card__desc {
    font-family: 'Inter', sans-serif;
    font-size: 0.5625rem;
    color: rgba(26, 26, 26, 0.5);
  }
{% endstyle %}

<section id="directory" class="luma-ingredient-dir">
  <div class="luma-ingredient-dir__container">
    <div class="luma-ingredient-dir__grid">
      {% for block in section.blocks %}
        <a href="#{{ block.settings.anchor_id }}" class="luma-element-card" {{ block.shopify_attributes }}>
          <div class="luma-element-card__glow" style="background: {{ block.settings.hover_gradient }};"></div>
          <div class="luma-element-card__content">
            <span class="luma-element-card__number">{{ block.settings.number }}</span>
            <h3 class="luma-element-card__symbol">{{ block.settings.symbol }}</h3>
            <p class="luma-element-card__name">{{ block.settings.name }}</p>
            <p class="luma-element-card__desc">{{ block.settings.subtitle }}</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Ingredient Directory",
  "settings": [],
  "blocks": [
    {
      "type": "ingredient_card",
      "name": "Ingredient Element Card",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Atomic Number",
          "default": "01",
          "info": "2 digits (e.g., 01, 02)"
        },
        {
          "type": "text",
          "id": "symbol",
          "label": "Symbol",
          "default": "Aa",
          "info": "1-2 letters (e.g., Aa, Ce, Vc)"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Full Name",
          "default": "Alpha Arbutin"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle / Category",
          "default": "Tyrosinase Inhibitor"
        },
        {
          "type": "color_background",
          "id": "hover_gradient",
          "label": "Hover Glow Background",
          "default": "linear-gradient(135deg, #FDF0C8 0%, #F9C3B1 100%)",
          "info": "Gradient that fades in on hover."
        },
        {
          "type": "text",
          "id": "anchor_id",
          "label": "Scroll Anchor ID",
          "default": "arbutin",
          "info": "Must exactly match the Anchor ID set in the corresponding Ingredient Dossier block below."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredient Directory",
      "blocks": [
        { "type": "ingredient_card" },
        { "type": "ingredient_card" },
        { "type": "ingredient_card" },
        { "type": "ingredient_card" },
        { "type": "ingredient_card" },
        { "type": "ingredient_card" }
      ]
    }
  ]
}
{% endschema %}
